<div class="row">
  <div class="col-6">
    <h1>Tracking Activities</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/newActivity" type="button" class="btn btn-primary align-self-center">+ Add New Activity</a>
    <form class="d-flex" method="POST" action="/tracking" novalidate>
    <p>&nbsp;&nbsp;</p>
          <input class="form-control me-2" type="Search" placeholder="Insert Class Roll" name="InsertRoll" aria-label="InsertRoll" style="width:150px">
          <button class="btn btn-outline-light" type="submit" style="color: blue;"><b>Insert Roll</b></button>
        </form>

  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">ID</th>
      <th scope="col">Date</th>
      <th scope="col">Activity</th>
      <th scope="col">Points Given</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.No}}</th>
      <td>{{this.ID}}</td>
      <td>{{this.Date}}</td>
      <td>{{this.Activity}}</td>
      <td>{{this.Points}}</td>
    </tr>
    {{/each}} 

  </tbody>
</table>

