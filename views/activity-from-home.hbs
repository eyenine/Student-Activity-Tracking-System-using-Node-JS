<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/tracking">Tracking Activity</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Activity Form for added</li>
    </ol>
</nav>

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<form class="row g-3 needs-validation" method="POST" action="/activity-from-home/{{this.id}}" novalidate>
    
    <div class="col-6">
    <div class="form-floating mb-3">
      <input type="number" class="form-control" id="floatingInput" value="{{text}}" placeholder="Roll" name="ID">
      <label for="floatingInput">Class Roll</label>
    </div>
  </div>
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="date" class="form-control" id="floatingInput" value="{{this.Date}}" placeholder="Date" name="Date">
      <label for="floatingInput">Date</label>
    </div>
  </div>
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{this.Activity}}" placeholder="Activity" name="Activity">
      <label for="floatingInput">Activity</label>
    </div>
  </div>
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="number" class="form-control" id="floatingInput" value="{{this.Points}}" placeholder="Point to be inserted" name="Points">
      <label for="floatingInput">Points Given</label>
    </div>
  </div>
  <div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>



</form>

